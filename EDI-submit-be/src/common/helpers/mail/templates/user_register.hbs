<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Custom Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">

    <style type="text/css">
        @import url("https://fonts.googleapis.com/css?family=Open+Sans");

        * {
            box-sizing: border-box;
        }

        body {
            background-color: #fafafa;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .c-email {
            width: 100%;
            border-radius: 40px;
            overflow: hidden;
            box-shadow: 0px 7px 22px 0px rgba(0, 0, 0, 0.1);
        }

        .c-email__header {
            background-color: #0fd59f;
            width: 100%;
            height: 60px;
        }

        .c-email__header__title {
            font-size: 23px;
            font-family: "Open Sans";
            height: 60px;
            line-height: 60px;
            margin: 0;
            text-align: center;
            color: white;
            width: 100%;
        }

        .c-email__content {
            width: 100%;
            height: 300px;
            flex-direction: column;
            justify-content: space-around;
            align-items: center;
            flex-wrap: wrap;
            background-color: #fff;
            padding: 15px;
        }

        .c-email__content__text {
            font-size: 20px;
            text-align: center;
            color: #343434;
            margin-top: 0;
        }

        .c-email__code {
            display: block;
            width: 100%;
            margin: 30px auto;
            background-color: #ddd;
            border-radius: 40px;
            padding: 20px;
            text-align: center;
            font-size: 36px;
            font-family: "Open Sans";
            letter-spacing: 10px;
            box-shadow: 0px 7px 22px 0px rgba(0, 0, 0, 0.1);
        }

        .c-email__footer {
            width: 100%;
            height: 60px;
            background-color: #fff;
        }

        .text-title {
            font-family: "Open Sans";
            width: 100%;
        }

        .text-center {
            text-align: center;
        }

        .text-italic {
            font-style: italic;
        }

        .opacity-30 {
            opacity: 0.3;
        }

        .mb-0 {
            margin-bottom: 0;
        }
        center {
            box-sizing: border-box;
            width: 100%;
            margin-left: 10%;
            margin-right: 10%;
        }
    </style>
</head>

<body>
    <center>
        <div class="c-email">
            <div class="c-email__header">
                <h1 class="c-email__header__title">Your Verification Code</h1>
            </div>
            <div class="c-email__content">
                <p class="c-email__content__text text-title">
                    Enter this verification code in field:
                </p>
                <div class="c-email__code">
                    <span class="c-email__code__text">{{otp}}</span>
                </div>
                <p class="c-email__content__text text-italic opacity-30 text-title mb-0">Verification code is valid only
                    for
                    30 minutes</p>
            </div>
            <div class="c-email__footer"></div>
        </div>
    </center>
</body>

</html>